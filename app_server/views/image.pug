extends layout
block script
  script(src='/javascripts/imagescript.js' defer)
block content
  //h1= title
  //p Welcome to #{title}
  a(href=`/uploads/${path}` id='imageDisplayRef'): img(src=`/uploads/${path}`)
  h1 Comments
  div(id='commentDisplay')
    each comment in comments
      div(id= "commentContainer")
        div(id= "commentLabel") #{comment.author}
        div(id= "commentText") #{comment.text}
  h1 Post Comment
  form(id="commentInput" action=`/comment/${path}` method="post")
    label Poster:
    input(id="authorInput" name="author")
    textarea(id="inputBox" name="text")
    button(id='sendButton') Send
